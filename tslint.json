{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "brace-style": ["error", "allman"],
    "rules": {
        "one-line": false,
        "new-parens": false,
        "trailing-comma": "never",
        "max-line-length": { 
            "options": [ 100 ] 
        },
        "no-console": [ true, "warning" ],
        "quotemark": [
            true,
            "single"
        ],
        "indent": [
            true
        ],
        "interface-name": [
            false
        ],
        "no-shadowed-variable": false,
        "arrow-parens": false,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "member-ordering": false
    },
    "linterOptions": {
        "exclude": [
            "./src/dist/**/*",
            "./node_modules/**/*"
        ]
    }
}